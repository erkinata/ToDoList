@model TaskListVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TaskList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="@Model.TaskList.CategoryListId" class="control-label"></label>
                <select asp-items="@Model.CategoryListItems" asp-for="@Model.TaskList.CategoryListId" class="form-control" required>
                <option>Select</option>
                </select>
                <span asp-validation-for="@Model.TaskList.CategoryListId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.TaskList.TaskName" class="control-label"></label>
                <input asp-for="@Model.TaskList.TaskName" class="form-control" />
                <span asp-validation-for="@Model.TaskList.TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.TaskList.TaskDescription" class="control-label"></label>
                <input asp-for="@Model.TaskList.TaskDescription" class="form-control" />
                <span asp-validation-for="@Model.TaskList.TaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.TaskList.TaskStatus" class="control-label"></label>
                <select asp-for="@Model.TaskList.TaskStatus" class="form-control">
                    <option>Pending</option>
                    <option>On Process</option>
                    <option>Completed</option>
                    <option>Canceled</option>

                </select>
                <span asp-validation-for="@Model.TaskList.TaskStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
